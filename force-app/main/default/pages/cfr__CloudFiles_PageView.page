        .cf-table {
            width: 100%;
            border-spacing: 0px;
        }        
        .cf-table td {
            color: #4a4a56;           
        }
        .cf-table td.col-name {
            width: 36%;
            padding-right: 15px;
            text-align: right;
            font-size: 91%;
            font-weight: bold;
        }
        .cf-table td.col-val {
            width: 64%;
