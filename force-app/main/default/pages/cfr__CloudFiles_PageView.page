    <table class="cf-table">
        <tr>                
            <td class="col-name">{!currentRecord.cfr__ObjectName__c}</td>
            <td class="col-val"><a href="/{!currentRecord.cfr__Object_Id__c}" target="_blank">{!currentRecordParentName}</a></td>
