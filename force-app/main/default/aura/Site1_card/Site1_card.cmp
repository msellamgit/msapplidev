<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" >
    <!--https://www.lightningdesignsystem.com/components/cards/#content
href="javascript:void(0);"-->
	<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="competences" type="List"/>
    <article class="slds-card">        
        <div class="slds-card__body">
            <ul class="slds-card__body_inner slds-grid slds-wrap slds-grid_pull-padded">
                <aura:iteration items="{!v.competences}" var="item">                    
                    <li class="slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_1-of-3">
                        <article class="slds-tile slds-media slds-card__tile slds-hint-parent">
                            <div class="slds-media__body">
                                <div class="slds-grid slds-grid_align-spread slds-has-flexi-truncate">
                                    <h3 class="css1 slds-tile__title slds-truncate" title="" >{!item.titre}</h3>
                                </div>
                                <div class="slds-tile__detail">
                                    <dl class="slds-list_horizontal slds-wrap">
                                        <!--<dt class="slds-item_label slds-text-color_weak slds-truncate" title="First Label">First Label: {!item.value} </dt> -->
                                        <dd class="slds-item_detail slds-truncate" title="">{!item.duree} </dd>
                                        <!--<dt class="slds-item_label slds-text-color_weak slds-truncate" title="Second Label">Second Label:</dt> -->
                                        <dd class="slds-item_detail slds-truncate" title="">{!item.detail1}</dd>
                                        <dd class="slds-item_detail slds-truncate" title="">{!item.detail2}</dd>
                                        <dd class="slds-item_detail slds-truncate" title="">{!item.detail3}</dd>
                                    </dl>
                                </div>
                            </div>
                        </article>
                    </li>
                </aura:iteration>                
            </ul>
        </div>
    </article>    
</aura:component>